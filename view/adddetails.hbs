      <h3>Add Students</h3>
<div id="al">
{{#if msgF}}
        <h3>Roll Number already exist!</h3>
    {{/if}} 
</div>
<form action="/addstudents">
    <label>Name: </label>
    <input name="Name", type="text", placeholder="Enter Name" required/><br>
    <label>Roll No.: </label>
    <input name="RollNo", type="text", placeholder="Enter RollNo" required/><br>
    <label>Date of Birth: </label>
    <input name="DOB", type="date", placeholder="Enter DOB" required/><br>
    <label>Score: </label>
    <input name="Score", type="text", placeholder="Enter Score" required/><br>
    <input name="Submit", type="submit">
    {{#if msg}}
        <h3>Data Inserted!</h3>
    {{/if}}
</form>

